<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://www.jetbrains.com/teamcity/schemas/2021.1/project-config.xsd">
  <name>WinConsole + Parallel Tests</name>
  <description />
  <settings>
    <options>
      <option name="artifactRules" value="bin =&gt; batch-build-%teamcity.build.parallelTests.currentBatch%/bin" />
    </options>
    <disabled-settings>
      <setting-ref ref="RQ_1" />
      <setting-ref ref="RQ_2" />
      <setting-ref ref="RUNNER_2" />
    </disabled-settings>
    <parameters />
    <build-runners>
      <runner id="RUNNER_1" name="Test Win" type="dotnet">
        <parameters>
          <param name="command" value="test" />
          <param name="dotNetCoverage.dotCover.home.path" value="%teamcity.tool.JetBrains.dotCover.CommandLineTools.DEFAULT%" />
          <param name="paths" value="Clock.Tests/Clock.Tests.csproj" />
          <param name="plugin.docker.imageId" value="mcr.microsoft.com/dotnet/sdk:7.0" />
          <param name="required.sdk" value="7" />
          <param name="teamcity.step.mode" value="default" />
        </parameters>
      </runner>
      <runner id="RUNNER_2" name="Test Linux" type="dotnet">
        <parameters>
          <param name="command" value="test" />
          <param name="dotNetCoverage.dotCover.home.path" value="%teamcity.tool.JetBrains.dotCover.CommandLineTools.DEFAULT%" />
          <param name="paths" value="Clock.Tests/Clock.Tests.csproj" />
          <param name="plugin.docker.imageId" value="mcr.microsoft.com/dotnet/sdk:7.0" />
          <param name="plugin.docker.imagePlatform" value="linux" />
          <param name="required.sdk" value="7" />
          <param name="teamcity.step.mode" value="default" />
        </parameters>
      </runner>
      <runner id="RUNNER_3" name="Publish console" type="dotnet">
        <parameters>
          <param name="command" value="publish" />
          <param name="dotNetCoverage.dotCover.home.path" value="%teamcity.tool.JetBrains.dotCover.CommandLineTools.DEFAULT%" />
          <param name="outputDir" value="bin/Clock.Console/win-x64" />
          <param name="paths" value="Clock.Console/Clock.Console.csproj" />
          <param name="plugin.docker.imageId" value="mcr.microsoft.com/dotnet/sdk:7.0" />
          <param name="runtime" value="win-x64" />
          <param name="teamcity.step.mode" value="default" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="DotNetEStouImport_HttpsGithubComValrravnTeamcityDotnetSamplesNoktsRefsHeadsMain" />
    </vcs-settings>
    <requirements>
      <matches id="RQ_1" name="teamcity.agent.jvm.os.family" value="Linux" />
      <starts-with id="RQ_2" name="cloud.amazon.agent-name-prefix" value="Ubuntu-20.04" />
    </requirements>
    <build-triggers />
    <build-extensions>
      <extension id="BUILD_EXT_1" type="parallelTests">
        <parameters>
          <param name="numberOfBatches" value="4" />
        </parameters>
      </extension>
    </build-extensions>
    <cleanup />
  </settings>
</build-type>

